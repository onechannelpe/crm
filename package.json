{
  "name": "one-workspace",
  "private": true,
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "clean:deps": "bun x shx rm -rf apps/*/node_modules node_modules",
    "dev": "bun run --parallel --filter '@one/*' dev",
    "format": "biome format --write",
    "format:md": "bun x prettier \"**/*.{md,yml,yaml}\" --write --print-width=80 --prose-wrap=always"
  },
  "devDependencies": {
    "@types/bun": "1.3.8",
    "@types/node": "^25.2.2",
    "bun-types": "^1.3.9",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  }
}
